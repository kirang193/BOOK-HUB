<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:src="@drawable/profile_image" />
    <TextView
        android:id="@+id/txtProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:text="@string/profile_fragment"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_below="@+id/txtProfile"
        android:id="@+id/txtProfileName"
        android:layout_width="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:textStyle="italic"
        android:textColor="#ffff00"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:padding="10dp"
        android:text="Kiran Kumar" />
    <TextView
        android:layout_below="@+id/txtProfileName"
        android:id="@+id/txtEmailId"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="italic"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:padding="10dp"
        android:text="kirankumarg057@gmail.com" />
    <TextView
        android:layout_below="@+id/txtEmailId"
        android:id="@+id/txtPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textStyle="italic"
        android:textColor="#00ff00"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:padding="10dp"
        android:text="Contact: +91-(630)4476920" />
    <TextView
        android:layout_below="@+id/txtPhoneNumber"
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="35dp"
        android:textStyle="italic"
        android:textColor="#30D5C8"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:padding="10dp"
        android:text="MC-108, Bombay Colony" />

</RelativeLayout>